<div class="user-info">
  <%= link_to "メモ一覧", root_path, class: "user-btn" %>
  <% if user_signed_in? && current_user.id == @post.user_id %>
      <%= link_to "編集", edit_post_path(@post.id), class: "user-btn" %>
      <%= link_to "削除", post_path(@post.id), method: :delete, class: "user-btn" %>
  <% end %>
</div>
<div class="postTitle">
  <%= @post.company %>
</div>
<div class="show-contents">
  <div class="post.business-man">
    <%= @post.name%>
  </div>
  <div class="postDate">
    <%= @post.created_at %>
  </div>
  <div class="postAuthor">
  </div>
  <div class="postText">
    <%= simple_format @post.detail %>
  </div>
  <div class ="postimage">
    <%= image_tag @post.image.url%>
  </div>
</div>