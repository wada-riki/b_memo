<div class="content__title">
  名刺の保存
</div>

<%= form_with model: @post, class: :form, local: true do |form| %>
  <%= form.text_field :company, placeholder: :Company, class: :form__title %>
  <%= form.text_field :name, placeholder: :Name, class: :form__text %>
  <%= form.submit '保存する', class: :form__btn %>
<% end %>