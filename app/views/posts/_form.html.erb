<%= form_with model: @post, class: :form, local: true do |form| %>
  <%= form.text_field :company, placeholder: :Company, class: :form__text %></br>
  <%= form.text_field :name, placeholder: :Name, class: :form__text %></br>
  <%= form.text_area :detail, placeholder: :Detail, class: :form__area %></br>
  <%= form.file_field :image, placeholder: :Image, class: :form__text %></br>
  <%= form.submit '保存する', class: :form__btn %></br>
<% end %>